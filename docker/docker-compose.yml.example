version: '3.9'

services:
  db:
    image: postgres:15
    container_name: gigafood-db
    environment:
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password
      POSTGRES_DB: dbname
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U gigafood"]
      interval: 10s
      retries: 5

  backend:
    build: .
    container_name: gigafood-backend
    depends_on:
      db:
        condition: service_healthy
      fastapi:
        condition: service_started
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://db:port/dbname
      SPRING_DATASOURCE_USERNAME: user
      SPRING_DATASOURCE_PASSWORD: password
      SPRING_JPA_HIBERNATE_DDL_AUTO: update
    ports:
      - "8080:8080"

  fastapi:
    build:
      context: ./ai
      dockerfile: Dockerfile
    container_name: gigafood-fastapi
    ports:
      - "8000:8000"

volumes:
  db_data: